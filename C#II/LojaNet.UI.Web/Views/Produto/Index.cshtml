@model IEnumerable<LojaNet.Models.Produto>

@{
    ViewBag.Title = "Index";
}


<h2>Produto</h2>
<p>
    <a class="btn btn-info" href="/Produto/Incluir">Novo</a>
</p>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Preço</th>
        <th>Estoque</th>
    </tr>

    @foreach (var produto in Model)
    {
        <tr>
            @*<td> <a href="/Clientes/Detalhes/@cliente.Id"
                @cliente.Nome</td>*@
            <td>
                @Html.ActionLink(produto.Nome, "Detalhes", new { id = produto.Id })
            </td>
            <td>@produto.Preco.ToString("c")</td>
            <td>@produto.Estoque</td>
        </tr>
    }
</table>
